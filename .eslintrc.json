{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "eslint:recommended", 
        "airbnb", 
        "airbnb/hooks", 
        "airbnb-typescript", 
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "tsconfig.json"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 2
            }
        ],
        "prettier/prettier": ["error"]
    },
    "ignorePatterns": ["webpack.config.js"]
}
