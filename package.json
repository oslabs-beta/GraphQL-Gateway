        "sass": "^1.49.9",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.8.2",
        "typescript": "^4.6.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.7.4"
    },
    "lint-staged": {
        "*.{js, ts}": "eslint --cache --fix",
        "*.{js,ts,css,md}": "prettier --write --ignore-unknown"
    }
}
